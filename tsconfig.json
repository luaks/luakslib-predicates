{
  "compilerOptions": {
    "target": "es6",
    "module": "ES6",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "include": [
    "src/*.ts",
  ],
  "exclude": [
    "src/*.spec.ts"
  ]
}
